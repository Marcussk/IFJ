BinDir=./bin/

#compiler
CC=gcc

#compiler options
OPTS=-c -Wall

#source files
SOURCES=$(wildcard *.c )

#object files
OBJECTS= $(SOURCES:.c=.o)

#executable filename
EXECUTABLE=ifj.run


all: $(EXECUTABLE)

$(EXECUTABLE): $(OBJECTS)
	$(LINK.o) $^ -o $@ $(LIBS)

clean:
	rm $(EXECUTABLE) $(OBJECTS)

